.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.chat-list {
  flex: 1;
  max-height: 34vh;
  padding: 20rpx;
  overflow-y: auto;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.message {
  max-width: 80%;
  padding: 20rpx;
  border-radius: 12rpx;
  word-wrap: break-word;
}

.message-user {
  align-self: flex-end;
  background-color: #1296db;
  color: #fff;
}

.message-ai {
  align-self: flex-start;
  background-color: #fff;
  color: #333;
  border: 1rpx solid #eee;
}

.message-content {
  font-size: 28rpx;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-all;
}

.footer {
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.input-area {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  align-items: center;
}

.text-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.send-button {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1296db;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0;
}

.send-button[disabled] {
  background-color: #ccc;
  color: #fff;
}

.controls {
  display: flex;
  gap: 20rpx;
  justify-content: space-between;
  align-items: center;
}

.chat-button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1296db;
  color: #fff;
  border-radius: 40rpx;
}

.chat-button.recording {
  background-color: #e64340;
}

.end-button {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #999;
  color: #fff;
  border-radius: 40rpx;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1296db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-container text {
  font-size: 28rpx;
  color: #666;
}

.ppt-container {
  width: 100%;
  height: 66vh;
  background: #f5f5f5;
  margin: 20rpx 0;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.ppt-slide {
  width: 100%;
  height: calc(66vh - 80rpx);
  object-fit: contain;
}

.ppt-controls {
  display: flex;
  justify-content: space-around;
  padding: 10rpx;
  background: rgba(255, 255, 255, 0.9);
}

.ppt-btn {
  min-width: 160rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #1296db;
  color: #fff;
  border-radius: 30rpx;
}

.ppt-btn[disabled] {
  background: #ccc;
  color: #fff;
} 