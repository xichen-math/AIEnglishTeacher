.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.chat-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.message {
  max-width: 80%;
  padding: 20rpx;
  border-radius: 12rpx;
  word-wrap: break-word;
}

.message-user {
  align-self: flex-end;
  background-color: #1296db;
  color: #fff;
}

.message-ai {
  align-self: flex-start;
  background-color: #fff;
  color: #333;
  border: 1rpx solid #eee;
}

.message-content {
  font-size: 28rpx;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-all;
}

.footer {
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.input-area {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  align-items: center;
}

.text-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.send-button {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1296db;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0;
}

.send-button[disabled] {
  background-color: #ccc;
  color: #fff;
}

.controls {
  display: flex;
  gap: 20rpx;
  justify-content: space-between;
  align-items: center;
}

.chat-button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1296db;
  color: #fff;
  border-radius: 40rpx;
}

.chat-button.recording {
  background-color: #e64340;
}

.end-button {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #999;
  color: #fff;
  border-radius: 40rpx;
} 