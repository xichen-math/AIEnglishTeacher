.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

.chat-list {
  flex: 1;
  padding: 10rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
  height: calc(33.33vh - 180rpx);
  background: #fff;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.message {
  max-width: 60%;
  min-width: 100rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  word-wrap: break-word;
  box-sizing: border-box;
  position: relative;
}

.message-user {
  align-self: flex-end;
  background-color: #1296db;
  color: #fff;
  margin-left: 100rpx;
  margin-right: 10rpx;
  border-bottom-right-radius: 6rpx;
}

.message-ai {
  align-self: flex-start;
  background-color: #fff;
  color: #333;
  border: 1rpx solid #eee;
  margin-right: 100rpx;
  margin-left: 10rpx;
  border-bottom-left-radius: 6rpx;
}

.message-content {
  font-size: 28rpx;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-all;
  overflow: hidden;
}

.footer {
  padding: 10rpx 20rpx;
  background: #fff;
  border-top: 1px solid #eee;
}

.input-area {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  align-items: center;
}

.text-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.send-button {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1296db;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0;
}

.send-button[disabled] {
  background-color: #ccc;
  color: #fff;
}

.controls {
  display: flex;
  gap: 20rpx;
  justify-content: space-between;
  align-items: center;
}

.chat-button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1296db;
  color: #fff;
  border-radius: 40rpx;
}

.chat-button.recording {
  background-color: #e64340;
}

.end-button {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #999;
  color: #fff;
  border-radius: 40rpx;
}

.ppt-container {
  width: 100%;
  height: 66.67vh;
  position: relative;
  overflow: hidden;
}

.ppt-slide {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.ppt-controls {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  transform: translateY(-50%);
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.3s;
}

.arrow-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.2);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  pointer-events: auto;
  cursor: pointer;
}

.arrow-btn:active {
  background: rgba(0, 0, 0, 0.4);
}

.ppt-container:hover .ppt-controls {
  opacity: 1;
}

/* 全屏按钮样式 */
.fullscreen-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.2);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  cursor: pointer;
  z-index: 100;
}

.fullscreen-btn:active {
  background: rgba(0, 0, 0, 0.4);
}

/* 横屏时的样式 */
@media screen and (orientation: landscape) {
  .chat-container {
    flex-direction: column;
    height: 100vh;
    background: #000;
    position: relative;
  }

  /* PPT区域 */
  .ppt-container {
    width: 100vw;
    height: 100vh;
    background: #000;
    margin: 0;
    position: relative;
    overflow: hidden;
  }

  .ppt-slide {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* 隐藏聊天相关元素 */
  .chat-list,
  .footer,
  .input-area,
  .controls {
    display: none;
  }

  .fullscreen-btn {
    display: none;
  }
}

.ppt-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 2;
} 