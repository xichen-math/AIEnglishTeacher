.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
  padding-top: calc(88rpx + env(safe-area-inset-top));  /* 为导航栏留出空间 */
}

.chat-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
  height: calc(33.33vh - 180rpx);
  background: #f5f5f5;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}

/* 消息行布局 */
.message-row {
  display: flex;
  width: 100%;
  margin-bottom: 20rpx;
}

.ai-message-row {
  justify-content: flex-start;
}

.user-message-row {
  justify-content: flex-end;
}

/* 头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  overflow: hidden;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
  border: 2rpx solid #e0e0e0;
  background-color: #f5f5f5; /* 添加背景色，防止图片加载时空白 */
}

.avatar-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  z-index: 10; /* 确保图片在最上层 */
}

.avatar-text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3);
}

.ai-avatar {
  margin-right: 15rpx;
  background-color: #07c160; /* 微信绿色 */
}

.user-avatar {
  margin-left: 15rpx;
  background: linear-gradient(135deg, #42a5f5, #1976d2);
}

/* Charlotte头像特殊样式 */
.charlotte-avatar-inner {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3);
  background: linear-gradient(135deg, #5c6bc0, #3949ab); /* 深蓝色渐变 */
}

/* 消息气泡样式 */
.message {
  max-width: 70%;
  min-width: 100rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx; /* 更大的圆角半径 */
  word-wrap: break-word;
  box-sizing: border-box;
  position: relative;
  z-index: 5;
  margin: 0 15rpx; /* 增加左右边距 */
}

.ai-message {
  background-color: #ffffff;
  border-top-left-radius: 4rpx; /* 小圆角，更自然 */
  margin-left: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

/* AI消息气泡的小三角形 */
.ai-message:before {
  content: "";
  position: absolute;
  top: 20rpx;
  left: -10rpx;
  width: 0;
  height: 0;
  border-top: 10rpx solid transparent;
  border-right: 15rpx solid #ffffff;
  border-bottom: 10rpx solid transparent;
}

.user-message {
  background-color: #95ec69; /* 微信浅绿色 */
  color: #000000;
  border-top-right-radius: 4rpx; /* 小圆角，更自然 */
  margin-right: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

/* 用户消息气泡的小三角形 */
.user-message:before {
  content: "";
  position: absolute;
  top: 20rpx;
  right: -10rpx;
  width: 0;
  height: 0;
  border-top: 10rpx solid transparent;
  border-left: 15rpx solid #95ec69;
  border-bottom: 10rpx solid transparent;
}

.message-content {
  font-size: 30rpx;
  line-height: 1.5;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 底部输入区域 */
.footer {
  padding: 20rpx;
  background: #f9f9f9;
  border-top: 1rpx solid #eaeaea;
}

.input-area {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  align-items: center;
}

.text-input {
  flex: 1;
  height: 80rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
  border-radius: 40rpx;
  font-size: 30rpx;
  border: 1rpx solid #e0e0e0;
}

.send-button {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1aad19;
  color: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding: 0;
}

.send-button[disabled] {
  background-color: #9ed99d;
  color: #ffffff;
}

/* 实时识别文本样式 */
.recognition-text {
  width: 100%;
  padding: 20rpx;
  margin: 10rpx 0;
  background-color: #f0f8ff;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #666;
  min-height: 60rpx;
  text-align: center;
  border: 1px dashed #ccc;
}

.controls {
  display: flex;
  justify-content: flex-end;
  padding: 10rpx 0;
}

.end-button {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #999;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.ppt-container {
  width: 100%;
  height: 66.67vh;
  position: relative;
  overflow: hidden;
}

.ppt-slide {
  width: 100%;
  height: 100%;
  object-fit: contain;
  background-color: #f9f9f9;
  z-index: 1;
  display: block;
}

.ppt-controls {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  z-index: 10;
  pointer-events: auto;
}

.arrow-btn-container {
  width: 120rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.arrow-btn {
  width: 100rpx;
  height: 100rpx;
  background-color: rgba(0, 0, 0, 0.3);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
}

.arrow-btn.next {
  box-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
}

.ppt-container:hover .ppt-controls {
  opacity: 1;
}

.ppt-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 全屏按钮样式 */
.fullscreen-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.2);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  cursor: pointer;
  z-index: 100;
}

.fullscreen-btn:active {
  background: rgba(0, 0, 0, 0.4);
}

/* 导航栏样式 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding-top: env(safe-area-inset-top);
  z-index: 1000;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.back-btn {
  width: 80rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
  cursor: pointer;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  padding-right: 80rpx;
}

/* 悬浮返回按钮样式 */
.float-back-btn {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.2);
  color: #fff;
  border-radius: 50%;
  display: none;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 100;
  opacity: 0;
  transition: opacity 0.3s;
}

.float-back-btn:active {
  background: rgba(0, 0, 0, 0.4);
}

.ppt-container:hover .float-back-btn {
  display: flex;
  opacity: 1;
}

/* 横屏时的样式 */
@media screen and (orientation: landscape) {
  .chat-container {
    flex-direction: column;
    height: 100vh;
    background: #000;
    position: relative;
    padding-top: 0;
  }

  /* PPT区域 */
  .ppt-container {
    width: 100vw;
    height: 100vh;
    background: #000;
    margin: 0;
    position: relative;
    overflow: hidden;
  }

  .ppt-slide {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* 隐藏聊天相关元素和导航栏 */
  .chat-list,
  .footer,
  .input-area,
  .controls,
  .custom-nav,
  .fullscreen-btn {
    display: none !important;
  }

  /* 显示悬浮返回按钮 */
  .float-back-btn {
    display: flex;
  }
}

.back-icon {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #fff;
  border-left: 4rpx solid #fff;
  transform: rotate(-45deg);
  margin-left: 6rpx;
}

.custom-nav .back-icon {
  border-color: #333;
}

.float-back-btn {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.2);
  color: #fff;
  border-radius: 50%;
  display: none;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 100;
  opacity: 0;
  transition: opacity 0.3s;
}

.trophy {
  position: absolute;
  font-size: 80rpx;
  z-index: 1000;
  transform: scale(1);
  opacity: 1;
  pointer-events: none;
  transition: all 0.5s ease-out;
  display: block;
}

.trophy.move {
  left: calc(100% - 80rpx) !important;
  top: 20rpx !important;
  transform: scale(0.8);
  opacity: 0;
  transition: all 1.2s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.debug-info {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  background: rgba(0,0,0,0.5);
  color: white;
  padding: 5rpx 10rpx;
  font-size: 24rpx;
  z-index: 100;
}

.charlotte-avatar {
  /* 微信风格头像 */
  background: #1296db; /* 微信蓝色 */
  border: none !important; /* 覆盖avatar基类的边框 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

.charlotte-avatar .avatar-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  text-shadow: none; /* 移除文字阴影使其更清晰 */
  line-height: 1;
  transform: translateY(1rpx); /* 微调文字垂直居中 */
} 