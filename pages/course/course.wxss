/* pages/course/course.wxss */
.container {
  padding: 32rpx;
  background: #fff;
}

.search-box {
  position: relative;
  margin-bottom: 32rpx;
}

.search-box icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

.search-box input {
  width: 100%;
  height: 80rpx;
  background: #F8FAFC;
  border-radius: 999rpx;
  padding: 0 60rpx;
  font-size: 28rpx;
}

.filter-tags {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
  overflow-x: auto;
}

.tag {
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  color: #666;
  background: #F8FAFC;
  white-space: nowrap;
}

.tag.active {
  color: #3176FF;
  background: rgba(49, 118, 255, 0.1);
}

.tab-header {
  border-bottom: 2rpx solid #eee;
  margin-bottom: 32rpx;
}

.tab {
  display: inline-block;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #3176FF;
  border-bottom: 4rpx solid #3176FF;
}

.course-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.course-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.course-card image {
  width: 100%;
  height: 240rpx;
  object-fit: cover;
}

.course-info {
  padding: 16rpx;
}

.course-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.course-meta {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.dot {
  margin: 0 8rpx;
}

.course-rating {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.stars {
  display: flex;
  gap: 4rpx;
}

.star {
  font-size: 24rpx;
}

.level {
  font-size: 24rpx;
  color: #3176FF;
}