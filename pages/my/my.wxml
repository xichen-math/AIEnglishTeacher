<view class="container">
  <!-- 我的课程 -->
  <view class="section">
    <view class="section-title">我的课程</view>
    <view class="course-list">
      <view class="course-item" wx:for="{{myCourses}}" wx:key="id">
        <text class="course-name">{{item.name}}</text>
        <text class="course-progress">学习进度: {{item.progress}}%</text>
      </view>
    </view>
  </view>

  <!-- 历史记录 -->
  <view class="section">
    <view class="section-title">历史记录</view>
    <view class="history-list">
      <view class="history-item" wx:for="{{chatHistories}}" wx:key="timestamp">
        <view class="history-header">
          <text class="history-course">{{item.courseName}}</text>
          <text class="history-time">{{item.timeStr}}</text>
        </view>
        <view class="history-messages">
          <text class="message-count">对话数: {{item.messages.length}}</text>
        </view>
      </view>
    </view>
  </view>
</view> 