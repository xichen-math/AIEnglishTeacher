.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

/* 课程列表样式 */
.course-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.course-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.course-name {
  font-size: 32rpx;
  color: #333;
}

.course-progress {
  font-size: 28rpx;
  color: #1296db;
}

/* 历史记录样式 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.history-course {
  font-size: 32rpx;
  color: #333;
}

.history-time {
  font-size: 28rpx;
  color: #999;
}

.history-messages {
  display: flex;
  align-items: center;
}

.message-count {
  font-size: 28rpx;
  color: #666;
} 