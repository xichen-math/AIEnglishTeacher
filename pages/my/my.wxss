.container {
  padding: 32rpx;
  background: #fff;
}

.user-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
}

.user-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.username {
  font-size: 32rpx;
  font-weight: 500;
}

.user-level {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.crown {
  color: #FFB800;
}

.settings {
  font-size: 40rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.tab-header {
  display: flex;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.tab-item {
  font-size: 28rpx;
  color: #666;
  padding-bottom: 8rpx;
  position: relative;
}

.tab-item.active {
  color: #3176FF;
  border-bottom: 4rpx solid #3176FF;
}

.course-card {
  display: flex;
  background: #F8FAFC;
  padding: 24rpx;
  border-radius: 16rpx;
}

.course-card image {
  width: 240rpx;
  height: 180rpx;
  border-radius: 12rpx;
}

.course-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.course-title {
  font-size: 28rpx;
  font-weight: 500;
}

.course-time, .course-type {
  font-size: 24rpx;
  color: #666;
}

.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.vip-tag {
  background: #FFB800;
  color: white;
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.settings-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.stat-item {
  background: #F8FAFC;
  padding: 32rpx 24rpx;
  border-radius: 16rpx;
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 40rpx;
  color: #2563EB;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.menu-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #F8FAFC;
  border-radius: 16rpx;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.menu-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
}

.menu-desc.blue {
  color: #2563EB;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  height: 100rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.section {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.course-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.course-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.course-progress {
  font-size: 28rpx;
  color: #1296db;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.history-course {
  font-size: 32rpx;
  color: #333;
}

.history-time {
  font-size: 28rpx;
  color: #999;
}

.history-messages {
  display: flex;
  align-items: center;
}

.message-count {
  font-size: 28rpx;
  color: #666;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 50;
  background: white;
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.main-content {
  padding: 104rpx 32rpx 160rpx;
  background: white;
  min-height: 100vh;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #2563EB;
  border-radius: 2rpx;
} 